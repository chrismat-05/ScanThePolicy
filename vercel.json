{
  "version": 2,
  "builds": [
    { "src": "apps/frontend/package.json", "use": "@vercel/static-build" },
    { "src": "apps/backend/main.py", "use": "@vercel/python" }
  ],
  "rewrites": [
    { "source": "/api/summarize", "destination": "/apps/backend/main.py" },
    { "source": "/(.*)", "destination": "/apps/frontend/$1" }
  ]
}